@typeparam TItem

@inject IModalService ModalService;

<EditForm Model="@Item">
    <DataAnnotationsValidator />
    <CreationAutoFields />

    <ValidationSummary />

    <button type="submit" @onclick="@Submit" class="btn-primary">Submit</button>
    <button @onclick="@Cancel" class="btn-secondary">Cancel</button>
</EditForm>

@code {

    /// <summary>
    /// Gets or sets the parameters which were provided to this component by the <see cref="IModalService"/>.
    /// </summary>
    [CascadingParameter] ModalParameters Parameters { get; set; }

    /// <summary>
    /// Gets or sets the item which should be created.
    /// </summary>
    public TItem Item { get; set; }

    /// <inheritdoc />
    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        this.Item = Parameters.Get<TItem>(nameof(Item));
    }

    private void Submit()
    {
        ModalService.Close(ModalResult.Ok(Item));
    }

    private void Cancel()
    {
        ModalService.Cancel();
    }
}
